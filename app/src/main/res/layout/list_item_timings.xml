<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/item_margin_left">

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/madabold"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_header3_15"
        tools:text="Day" />

    <TextView
        android:id="@+id/timmings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:fontFamily="@font/madasemibold"
        android:gravity="left"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_header3_15"
        tools:text="Timming" />

</LinearLayout>